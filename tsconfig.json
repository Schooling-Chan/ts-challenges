{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["scripts/*.ts", "type-template/*.ts"],
  "exclude": ["node_modules", "dist"]
}
